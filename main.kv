<TouchscreenCircle@Image>:
    size_hint: None, None
    allow_stretch: True
    keep_ratio: False

<LightdreamTouchScreen>:
    name: "lightdream"
    canvas.before:
        Color:
            rgba: 0, 0, 0, 0
        Rectangle:
            pos: self.pos
            size: self.size
    TouchscreenCircle:
        id: HUESHIFT
        size: 550, 550
    TouchscreenCircle:
        id: KALEIDOSCOPE
        size: 550, 550
    TouchscreenCircle:
        id: TUNNEL
        size: 550, 550
    TouchscreenCircle:
        id: LIGHTNING
        size: 215, 215
    TouchscreenCircle:
        id: NUCLEAR
        size: 250, 250
    TouchscreenCircle:
        id: SPIRAL
        size: 215, 215
    TouchscreenCircle:
        id: RADIANTLINES
        size: 215, 215

<LayoutTestScreen>:
    name: "layout_test"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "images/!touchscreen layout 3.png"
